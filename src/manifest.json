{
  "manifest_version": 2,
  "name": "Monsieur Sapin extension",
  "description": "Suivez l'actualit√© de Monsieur Sapin",
  "version": "3.0.0",
  "permissions": ["http://*/*", "https://*/*", "storage", "notifications", "tabs"],
  "browser_action": {
    "default_icon": "./assets/icon.png",
    "default_title": "Monsieur Sapin est hors ligne",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "./assets/icon_live.png"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "author": {
      "main": "Volchan",
      "website": "www.volchan.fr",
      "email": "contact@volchan.fr"
  },
  "content_security_policy": "script-src 'self' https://*.twitter.com https://*.twitter.com https://*.twimg.com; object-src 'self'; style-src 'self' data: chrome-extension-resource: 'unsafe-inline'"
}
