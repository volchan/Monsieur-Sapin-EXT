{
  "manifest_version": 2,
  "name": "Monsieur Sapin extension",
  "description": "Suivez l'actualit√© de Monsieur Sapin",
  "version": "2.2.9",
  "permissions": ["http://*/*", "https://*/*", "storage", "notifications", "tabs"],
  "browser_action": {
    "default_icon": "/src/img/icon.png",
    "default_title": "Monsieur Sapin est hors ligne",
    "default_popup": "/src/popup.html"
  },
  "icons": {
    "128": "/src/img/icon_128.png"
  },
  "background": {
    "scripts": ["/src/js/background.js"]
  },
  "author": {
      "main": "Volchan",
      "website": "www.volchan.fr",
      "email": "contact@volchan.fr"
  },
  "content_security_policy": "script-src 'self' https://*.twitter.com https://*.twitter.com https://*.twimg.com; object-src 'self'"
}
