{
  "manifest_version": 2,
  "name": "Monsieur Sapin extension",
  "description": "Suivez l'actualit√© de Monsieur Sapin",
  "version": "1.7",
  "permissions": ["http://*/*", "https://*/*", "notifications", "tabs"],
  "browser_action": {
    "default_icon": "/img/icon.png",
    "default_popup": "/popup/popup.html"
  },
  "icons": {
    "128": "/img/icon_128.png"
  },
  "background": {
    "scripts": ["/js/background.js"]
  },
  "author": {
      "main": "Volchan",
      "website": "www.volchan.fr"
  },
  "content_security_policy": "script-src 'self' https://*.twitter.com https://*.twitter.com https://*.twimg.com; object-src 'self'"
}
